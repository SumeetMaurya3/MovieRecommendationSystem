<!DOCTYPE html>
<html>
<head>
	<title>Animated Login Form</title>
	<link rel="stylesheet" type="text/css" href="css/mrslogin.css">
	<link rel="stylesheet" href="css/mrslogin2.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>
<style>
    .alert {
      padding: 20px;
      width: 100%;
      background-color: #f44336;
      color: rgb(0, 0, 0);
      opacity: 1;
      transition: opacity 0.6s;
      margin-bottom: 15px;
      position: fixed;
    }
    
    .alert.success {background-color: #04AA6D;}
    .alert.info {background-color: #2196F3;}
    .alert.warning {background-color: #ff9800;}
    .alert.mine {background-color: #13f4e3;}
    
    
    .closebtn {
      margin-left: 15px;
      color: white;
      font-weight: bold;
      float: right;
      font-size: 22px;
      line-height: 20px;
      cursor: pointer;
      transition: 0.3s;
    }
    
    .closebtn:hover {
      color: black;
    }
    </style>
<body>
	<%- include ('./partials/messages.ejs') %>
	<img class="wave" src="images/wave dark grey blue.png">
	<div class="container">
		<div class="img">
			<img src="images/bg.png">
		</div>
		<div class="login-content">
			<form method="POST" action="/mrslogin">
				<h2 class="title">Sign in</h2>
           		<div class="input-div one">
           		   <div class="i">
           		   		<i class="fas fa-user"></i>
           		   </div>
           		   <div class="div">
           		   		<h5>Email</h5>
           		   		<input type="text" class="input" id="logggin" name="email">
           		   </div>
           		</div>
           		<div class="input-div pass">
           		   <div class="i"> 
           		    	<i class="fas fa-lock"></i>
           		   </div>
           		   <div class="div">
           		    	<h5>Password</h5>
           		    	<input type="password" class="input" id="passsword" name="password">
            	   </div>
            	</div>
            	<input type="submit" class="btn finalLogin" value="Login" onclick="getAndUpdate()">
            </form>
        </div>
    </div> 
    <script>
        var close = document.getElementsByClassName("closebtn");
        var i;
        
        for (i = 0; i < close.length; i++) {
          close[i].onclick = function(){
            var div = this.parentElement;
            div.style.opacity = "0";
            setTimeout(function(){ div.style.display = "none"; }, 600);
          }
        }
        </script>
    <script type="text/javascript" src="javascript/mrslogin.js"></script>
    <script src="javascript/mrslogin2.js"></script>
	<script src="javascript/mrslogin3.js"></script>
</body>
</html>