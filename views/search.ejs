  <div class="findmoviemainbod">
  <!--Movie display -->
  <div class="moviedisplaybox">
    <h2 class="Searchresultfor">Search result for :- <%= searchedtext %></h2>
    <hr>
    <% j = 0%>
    <%moviesList.forEach(data => {%>
      <% j = j+1%>
      <% for (var i = j; i < j+1;  i++) { %>
        <% if(true){ %>
    <div class="moviemainmain">
    <div class="moviemainbox">
      <div class="movieimage">
        <img src="<%= data.image%>" alt="">
      </div>
      <div class="moviedata">
        <div class="topmoviedata">
          <div class="dateuploaded">
            <i class="fa fa-solid fa-sharp fa-clock"></i><%= data.date%>
          </div>
          <div class="numberswatched">
            <i class="fa fa-solid fa-sharp fa-user"></i> 0 watched
          </div>
        </div>
        <div class="movietitlewithrank">
        <div class="movietitle">
          <p><%= data.name %></p>
        </div>
        <div class="movierankfind movietitle">
          #<%= i%>
        </div>
      </div>
        <div class="tagsinmoviebox">
          <b><p>Tags:-
            <% for( let index = 0; index <data.tags.length; index++ ) { %>
              <button class="tagbutton botonbut"><%= data.tags[index] %></button>
            <% } %>
          </p></b>
        </div>
        <div class="descriptioninmoviebox">
          <p><%= data.description %></p>
        </div>
        <div class="bottommoviedata">
          <div class="buttonsatlast">
            <form action="/viewmovie" method="POST"><input type="text" name="movie_id" class="something" value="<%= data.name %>"><input type="text" name="tag_id" class="something" value="<%= data.tags[0] %>"><button class="btn btn-dark">view movie</button></form>
          </div>
        <div class="movierating">
          <p><%= data.rating %>/10</p>
        </div>
      </div>
      </div>
    </div>
    <% } %>
    <% } %>
