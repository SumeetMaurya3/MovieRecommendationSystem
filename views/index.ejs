<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
  
<style>
  /* side cart starts*/
.cart-overlay{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  /* transition-duration: 0.3s; */
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 2;
  visibility: hidden;
}
.cart{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* overflow: scroll; */
  z-index: 3;
  background-color: white;
  padding: 70px 20px;
  transition-duration: 0.3s;
  transform: translateX(-100%);
  background-color: #323232;
}
.showcart{
  transform: translateX(0%);
  /* transition-duration: 1s; */
}
.finalprofile{
  display:flex;
  width: 330px;
  height: 72px;
  border-bottom: 1px solid white;
}
#photo{
  width: 54px;
  height: 54px;
  margin: 10px 2px 5px 2px;
  border-radius: 50%;
  overflow: hidden;
}
#photo2{
  width: 54px;
  height: 54px;
  border-radius: 50%;
  overflow: hidden;
  /* padding: 10px 2px 5px 2px; */
}
.usernameinindex{
  padding: 20px 2px 2px 10px;
  font-size: 25px;
  color: white;
  /* border: 1px solid white; */
}
.tBcg{
  visibility: visible;
}
.something{
  display: none;
}
@media screen and (min-width: 768px) {
  .cart{
      width: 375px;
      min-width: 375px;
  }
}
/*side cart ends*/

</style>
</head>
<body>
  <!--Navigation bar starts-->
  <%- include ('./partials/header.ejs') %>
    <!--Navigation bar ends-->

    <!--slideshow bar starts-->
    <!-- Slideshow container -->
<div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
  <% j = 0%>
      <%moviesList.forEach(movie => {%>
        <% j = j+1%>
        <% for (var i = j; i < j+1;  i++) { %>
          <% if(j<6){ %>
            <div class="mySlides fade">
              <img src="<%= movie.image%>" width = "100%" height="500vh">
              <div class="text2"></div>
              <div class="text69">
                <h5>#<%= i %> trending</h5>
                <h2><%= movie.name%></h2>
                <div class="clockuser">
                  <i class="fa fa-solid fa-sharp fa-clock"></i>  <%= movie.date%>  
                  <i class="fa fa-solid fa-sharp fa-user"></i> 0
                </div>
                <div class="desdes">
                <p><%= movie.description %></p>
              </div>
              <div class="buttonsbuttons">
                  <form action="/viewmovie" method="POST"><input type="text" name="movie_id" class="something" value="<%= movie.name %>"><input type="text" name="tag_id" class="something" value="<%= movie.tags[0] %>"><button class="btn btn-light-outline">view movie</button></form>
              </div>
              </div>
            </div>
        <% } %>
        <% } %>
        <%})%>
  <!-- Next and previous buttons -->
  <!-- <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a> -->
</div>
<!--slideshow bar ends-->
<!--Side slider-->
<%- include ('./partials/slider.ejs') %>

<!--Next slider-->
<div class="homemain">
  <div class="homemainslider1">
    <div class="homemainsliderspace1"></div>
    <div><p class="homemainslider1title">Top 10 Movies</p></div>
    <div class="sliderwholebox">
      <% j = 0%>
      <%moviesList.forEach(movie => {%>
        <% j = j+1%>
        <% for (var i = j; i < j+1;  i++) { %>
          <% if(j<11){ %>
            <div class="slidersinglebox">
           <div class="slidermovieimg"><div class="movierank"><%= i %></div><img src="<%= movie.image%>" alt="" height="300px"></div> 
          <div class="slidermoviename"><%= movie.name%></div>
        </div>
        <% } %>
        <% } %>
        <%})%>
        
      </div>
  </div>
</div>
<script src="javascript/homepage.js"></script>
<script src="javascript/cart.js"></script>
<script src="javascript/slider.js"></script>
</body>
</html>